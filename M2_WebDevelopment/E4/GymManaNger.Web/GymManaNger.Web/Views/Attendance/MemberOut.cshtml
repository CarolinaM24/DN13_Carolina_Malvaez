@Html.Partial("~/Views/Home/Index.cshtml")
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">MemberOut</h5>
                    <form class="member-out-form" data-action="member-out-form">
                        <div class="mb-3">
                            <label for="identificador" class="form-label">Member ID</label>
